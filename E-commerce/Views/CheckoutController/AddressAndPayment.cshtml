@model E_commerce.Models.Order

@{
    ViewBag.Title = "Payment Info";
}

<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Address And Payment</h2>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End Page title area -->


