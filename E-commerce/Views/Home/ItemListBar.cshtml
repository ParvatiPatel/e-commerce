@model IEnumerable<E_commerce.Models.Item>


    @foreach (var item in Model)
            {
        <div class="col-md-4">
            <div class="single-shop-product">
                <div class="product-upper">
                    <img src="~/Assests/Uploads/Items/Thumbnails/@item.ThumbUrl" alt="@item.Name">
                </div>
                <h2><a href="@Url.Action("ItemDetails",new { id=item.IID})">@item.Name</a></h2>
                <div class="product-carousel-price">
                    @if (@item.Tag == "sale")
                    {
                        double price = (double)item.Price * 1.25;
                        <ins>$@item.Price</ins> <del>$@price</del>
                    }
                    else
                    {
                        <ins>$@item.Price</ins>
                    }
                </div>

                <div class="product-option-shop">
                    @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = item.IID }, new { @class = "add_to_cart_button" })


                </div>

            </div>

        </div>
    }


