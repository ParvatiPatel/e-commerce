@model IEnumerable<E_commerce.Models.Item>

@{
    ViewBag.Title = "ItemList";
}

<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>@ViewBag.Product List</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="single-shop-product">
                        <div class="product-upper">
                            <img src="~/Assests/Uploads/Items/Thumbnails/@item.ThumbUrl" alt="@item.Name">
                        </div>
                        <h2><a href="@Url.Action("ItemDetails",new { id=item.IID})">@item.Name</a></h2>
                        <div class="product-carousel-price">
                            @if (@item.Tag == "sale")
                            {
                                 double price = (double)item.Price * 1.25; 
                                <ins>$@item.Price</ins> <del>$@price</del>
                            }
                            else
                            {
                                <ins>$@item.Price</ins>
                            }
                        </div>

                        <div class="product-option-shop">
                            <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" href="/canvas/shop/?add-to-cart=70">Add to cart</a>
                        </div>

                    </div>

                </div>
            }
        </div>
    </div>
</div>








